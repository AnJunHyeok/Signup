<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></LinearLayout>
        <Button
            android:id="@+id/backBtn_Menu"
            android:layout_width="0dp"
            android:fontFamily="@font/omnigothic"
            android:background="@drawable/buttonback"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textColor="#555555"
            android:padding="0dp"
            android:textSize="15sp"
            android:text="back"
            android:layout_weight="1.5"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></LinearLayout>
        <TextView
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="메뉴"
            android:textSize="24sp"
            android:fontFamily="@font/omnigothic"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"></LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFFFFF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.15"
        android:gravity="center_vertical"
        android:background="@drawable/textviewback"
        android:fontFamily="@font/omnigothic"
        android:textSize="40sp"
        android:text="마이페이지"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.15"
        android:gravity="center_vertical"
        android:background="@drawable/textviewback"
        android:fontFamily="@font/omnigothic"
        android:textSize="40sp"
        android:text="나의 활동 기록"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="#FFFFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.15"
        android:gravity="center_vertical"
        android:background="@drawable/textviewback"
        android:fontFamily="@font/omnigothic"
        android:textSize="40sp"
        android:text="비밀번호 재설정"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.15"
        android:gravity="center_vertical"
        android:background="@drawable/textviewback"
        android:fontFamily="@font/omnigothic"
        android:textSize="40sp"
        android:text="알림 설정"/>

</LinearLayout>