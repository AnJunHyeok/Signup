<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <Button
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:id="@+id/backBtn_DisableSignup"
            android:layout_width="24dp"
            android:fontFamily="@font/omnigothic"
            android:background="@drawable/leftarrow"
            android:layout_height="24dp"
            android:layout_weight="0"/>
        <TextView
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="248dp"
            android:layout_height="match_parent"
            android:text="회원가입"
            android:textSize="24sp"
            android:fontFamily="@font/omnigothic"/>
    </LinearLayout>

    <View
        android:layout_below="@+id/linearLayout"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFFFFF" />

    <ScrollView
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <TextView
                    android:fontFamily="@font/omnigothic"
                    android:text="이름"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/user"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"/>
                <EditText
                    android:layout_marginLeft="16dp"
                    android:id="@+id/userNameEdit_DisableSignup"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/omnigothic"
                    android:textSize="40sp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <TextView
                    android:fontFamily="@font/omnigothic"
                    android:text="아이디(핸드폰 번호)"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/phone"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"/>
                <EditText
                    android:layout_marginLeft="16dp"
                    android:id="@+id/phoneNumEdit_DisableSignup"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/omnigothic"
                    android:inputType="number"
                    android:textSize="25sp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <TextView
                    android:fontFamily="@font/omnigothic"
                    android:text="비밀번호 입력"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/pass"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"/>
                <EditText
                    android:layout_marginLeft="16dp"
                    android:id="@+id/passEdit_DisableSignup"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/omnigothic"
                    android:inputType="numberPassword"
                    android:hint="숫자 4자리 이상"
                    android:textSize="30sp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/pass"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"/>
                <EditText
                    android:layout_marginLeft="16dp"
                    android:id="@+id/repassEdit_DisableSignup"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/omnigothic"
                    android:inputType="numberPassword"
                    android:hint="비밀번호 재입력"
                    android:textSize="30sp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <TextView
                    android:fontFamily="@font/omnigothic"
                    android:text="성별"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/manBtn_DisableSignup"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textColor="#555555"
                    android:text="남"
                    android:background="@drawable/buttonback"
                    android:textSize="30sp"
                    android:fontFamily="@font/omnigothic"/>
                <Button
                    android:layout_marginLeft="32dp"
                    android:id="@+id/womanBtn_DisableSignup"
                    android:layout_width="100dp"
                    android:background="@drawable/buttonback"
                    android:layout_height="match_parent"
                    android:textColor="#555555"
                    android:text="여"
                    android:textSize="30sp"
                    android:fontFamily="@font/omnigothic"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <TextView
                    android:fontFamily="@font/omnigothic"
                    android:text="장애 유형 선택"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <Spinner
                    android:id="@+id/disableKind_DisableSignup"
                    android:fontFamily="@font/omnigothic"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <Button
                    android:id="@+id/signupBtn_DisableSignup"
                    android:fontFamily="@font/omnigothic"
                    android:background="@drawable/buttonback"
                    android:textColor="#555555"
                    android:text="가입하기"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>